<main>
  <h2 id="newInvHeading">Add New Inventory Item</h1>

  <!-- Flash Messages -->
  <% if (typeof messages !== "undefined" && messages.length > 0) { %>
    <div class="flash-message">
      <%- messages %>
    </div>
  <% } %>

  <!--  
  <% if (errors && errors.length > 0) { %>
    <div class="error-message">
      <ul>
        <% errors.forEach(function (error) { %>
          <li><%= error.msg %></li>
        <% }); %>
      </ul>
    </div>
  <% } %> -->

  <!-- Add Inventory Form -->
  <form action="/inv/add-inventory" method="post" class="inventory-form" novalidate>
    <label for="classification_id">Classification:</label>
    <%- classificationDropdown %>

    
    <div>
      <label for="inv_make">Make:</label>
      <input
        type="text"
        id="inv_make"
        name="inv_make"
        required
        pattern="^[a-zA-Z0-9]+$"
        title="Make must be alphanumeric."
        value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>"
      >
      <span class="validation-message"></span>
    </div>

    <div>
      <label for="inv_model">Model:</label>
      <input
        type="text"
        id="inv_model"
        name="inv_model"
        required
        pattern="^[a-zA-Z0-9]+$"
        title="Model must be alphanumeric."
        value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>"
      >
    <span class="validation-message"></span>
    </div>

    <div>
      <label for="inv_year">Year:</label>
      <input
        type="number"
        id="inv_year"
        name="inv_year"
        required
        min="1900"
        max="2100"
        title="Year must be between 1900 and 2100."
        value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>"
      >
      <span class="validation-message"></span>
    </div>

    <div>
      <label for="inv_price">Price:</label>
      <input
        type="number"
        id="inv_price"
        name="inv_price"
        required
        min="0"
        step="0.01"
        title="Price must be a positive number."
        value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>"
      >
      <span class="validation-message"></span>
    </div>

    <div>
      <label for="inv_description">Description:</label>
      <textarea
        id="inv_description"
        name="inv_description"
        required
        title="Description is required."
      ><%= typeof inv_description !== 'undefined' ? inv_description : '' %></textarea>
      <span class="validation-message"></span>
    </div>





    <div>
      <label for="inv_image">Image Path:</label>
      <input
        type="text"
        id="inv_image"
        name="inv_image"
        required
        title="Image path is required."
        value="<%= typeof inv_image !== 'undefined' ? inv_image : '/images/vehicles/no-image.png' %>"
      >
      <span class="validation-message"></span>
    </div>

    <div>
      <label for="inv_thumbnail">Thumbnail Path:</label>
      <input
        type="text"
        id="inv_thumbnail"
        name="inv_thumbnail"
        required
        title="Thumbnail path is required."
        value="<%= typeof inv_thumbnail !== 'undefined' ? inv_thumbnail : '/images/vehicles/no-image-tn.png' %>"
      >
      <span class="validation-message"></span>
    </div>

  <div>
    <label for="inv_miles">Miles:</label>
    <input
      type="number"
      id="inv_miles"
      name="inv_miles"
      required
      min="0"
      title="Miles must be a non-negative number."
      value="<%= typeof inv_miles !== 'undefined' ? inv_miles : '' %>"
    >
    <span class="validation-message"></span>
  </div>

  <div>
    <label for="inv_color">Color:</label>
    <input
      type="text"
      id="inv_color"
      name="inv_color"
      required
      pattern="^[a-zA-Z]+$"
      title="Color must contain only letters."
      value="<%= typeof inv_color !== 'undefined' ? inv_color : '' %>"
    >
    <span class="validation-message"></span>
  </div>

    <button type="submit">Add Inventory</button>
  </form>
</main>

<script>
  document.querySelectorAll('input[required], textarea[required]').forEach((input) => {
    input.addEventListener('blur', (event) => {
      const field = event.target;
      const validationMessage = field.nextElementSibling; // Target span

      if (validationMessage && validationMessage.classList.contains('validation-message')) {
        if (!field.checkValidity()) {
          field.classList.add('error');
          validationMessage.textContent = field.title;
        } else {
          field.classList.remove('error');
          validationMessage.textContent = '';
        }
      }
    });
  });
</script>